<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/cardview_background"
    android:layout_height="wrap_content">
    <!-- TODO Shadow effect for API version below 21 -->
    <RelativeLayout

        android:id="@+id/card_view"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:background="@color/cardview_light_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="4dp"
        android:layout_marginBottom="@dimen/card_item_margin_bottom">


            <ImageView
                android:id="@+id/ivPicture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center" >
            </ImageView>
            <TextView
                android:id="@+id/tvTitle"
                android:textSize="@dimen/card_item_title_text_size"
                android:textStyle="normal|bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/card_item_title_margin_top"
                android:layout_marginLeft="@dimen/card_item_title_margin_left"
                android:layout_marginRight="@dimen/card_item_title_margin_right"
                android:layout_below="@+id/ivPicture">

            </TextView>
            <TextView
                android:id="@+id/tvDate"
                android:textSize="@dimen/card_item_date_text_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/card_item_date_margin_top"
                android:layout_marginLeft="@dimen/card_item_date_margin_left"
                android:layout_marginRight="@dimen/card_item_date_margin_right"
                android:layout_marginBottom="@dimen/card_item_date_margin_bottom"
                android:layout_below="@+id/tvTitle">
            </TextView>
            <TextView
                android:id="@+id/tvCategory"
                android:textSize="@dimen/card_item_category_text_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/card_item_category_margin_top"
                android:layout_marginEnd="@dimen/card_item_category_margin_end"
                android:layout_marginRight="@dimen/card_item_category_margin_right"
                android:layout_marginBottom="@dimen/card_item_category_margin_bottom"
                android:layout_below="@+id/tvTitle"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true">
            </TextView>


        </RelativeLayout>
</LinearLayout>
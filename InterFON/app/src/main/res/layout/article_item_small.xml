<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cardview_background">

        <RelativeLayout
            android:background="@color/cardview_light_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="4dp"
            android:layout_marginTop="@dimen/card_item2_margin_top">
            <ImageView
                android:id="@+id/ivPicture2"
                android:layout_width="@dimen/card_item_picture_width"
                android:layout_height="@dimen/card_item_picture_height"
                android:adjustViewBounds="true"
                android:cropToPadding="false"
                android:scaleType="centerCrop">
            </ImageView>
            <TextView
                android:id="@+id/tvTitle2"
                android:textSize="@dimen/card_item2_title_text_size"
                android:textStyle="normal|bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/ivPicture2"
                android:layout_toEndOf="@+id/ivPicture2"
                android:layout_marginTop="@dimen/card_item2_title_margin_top"
                android:layout_marginLeft="@dimen/card_item2_title_margin_left"
                android:layout_marginRight="@dimen/card_item2_title_margin_right">

            </TextView>
            <TextView
                android:id="@+id/tvDate2"
                android:textSize="@dimen/card_item2_date_text_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/ivPicture2"
                android:layout_toEndOf="@+id/ivPicture2"
                android:layout_alignParentBottom="true"
                android:paddingBottom="@dimen/card_item2_date_padding_bottom"
                android:layout_marginLeft="@dimen/card_item2_date_margin_left"
                android:layout_marginRight="@dimen/card_item2_date_margin_right">
            </TextView>
            <TextView
                android:id="@+id/tvCategory2"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/card_item2_category_text_size"
                android:paddingBottom="@dimen/card_item2_category_padding_bottom"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/card_item2_category_margin_left"
                android:layout_marginRight="@dimen/card_item2_category_margin_right">
            </TextView>

        </RelativeLayout>

</LinearLayout>
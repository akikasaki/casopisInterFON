<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view2"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        card_view:elevation="14dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ivPicture2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center" >
            </ImageView>
            <TextView
                android:id="@+id/tvTitle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/ivPicture2"
                android:layout_toEndOf="@+id/ivPicture2"
                android:textSize="18sp"
                android:textStyle="normal|bold"
                android:paddingLeft="8dp"
                android:paddingRight="8dp">

            </TextView>
            <TextView
                android:id="@+id/tvDescription2"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvTitle2"
                android:layout_toRightOf="@+id/ivPicture2"
                android:layout_toEndOf="@+id/ivPicture2"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:gravity="center" >
            </TextView>
            <TextView
                android:id="@+id/tvDate2"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvDescription2"
                android:layout_toRightOf="@+id/ivPicture2"
                android:layout_toEndOf="@+id/ivPicture2"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:gravity="center"
                android:textSize="12sp">
            </TextView>
            <com.android.casopisinterfon.interfon.UnderlinedTextView3
                android:id="@+id/tvCategory2"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvDescription2"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:textSize="12sp">
            </com.android.casopisinterfon.interfon.UnderlinedTextView3>
            <com.android.casopisinterfon.interfon.UnderlinedTextView2
                android:id="@+id/tvCategory22"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="3dp"
                android:paddingStart="3dp"
                android:paddingRight="3dp"
                android:layout_below="@+id/tvDescription2"
                android:layout_toLeftOf="@+id/tvCategory2"
                android:layout_toStartOf="@+id/tvCategory2"
                android:textSize="12sp">
            </com.android.casopisinterfon.interfon.UnderlinedTextView2>
            <com.android.casopisinterfon.interfon.UnderlinedTextView
                android:id="@+id/tvCategory23"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="3dp"
                android:paddingStart="3dp"
                android:paddingRight="3dp"
                android:layout_below="@+id/tvDescription2"
                android:layout_toLeftOf="@+id/tvCategory22"
                android:layout_toStartOf="@+id/tvCategory22"
                android:textSize="12sp">
            </com.android.casopisinterfon.interfon.UnderlinedTextView>


        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
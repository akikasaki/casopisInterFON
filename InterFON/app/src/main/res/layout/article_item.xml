<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/article_item_margin_bottom"
    android:foreground="?android:attr/selectableItemBackground"
    android:background="@color/cardview_light_background"

    android:elevation="2dp">


    <ImageView
        android:id="@+id/ivThumbnail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:gravity="center" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivThumbnail"

        android:padding="@dimen/article_item_content_padding">

        <TextView
            android:id="@+id/tvArticleTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="Lorem Ipsum"
            android:textColor="@color/primary_black_text"
            android:textSize="@dimen/article_item_title_textSize" />

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvArticleTitle"
            android:layout_marginTop="@dimen/article_item_date_margin_top"
            android:text="Lorem Ipsum"
            android:textColor="@color/secondary_black_text"
            android:textSize="@dimen/article_item_date_textSize" />

        <TextView
            android:id="@+id/tvCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tvArticleTitle"
            android:layout_marginTop="@dimen/article_item_category_margin_top"
            android:text="Lorem Ipsum"
            android:textColor="@color/secondary_black_text"
            android:textSize="@dimen/article_item_category_textSize" />


    </RelativeLayout>


</RelativeLayout>
